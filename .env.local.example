# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (Server-side only)
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_PRIVATE_KEY="your_private_key_here"
FIREBASE_ADMIN_CLIENT_EMAIL=your_service_account_email

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# OCR Services (Optional)
GOOGLE_CLOUD_VISION_API_KEY=your_google_vision_key
TESSERACT_WORKER_PATH=/path/to/tesseract/worker

# App Configuration
APP_URL=http://localhost:3000
APP_NAME=MoStatements
APP_VERSION=0.1.0

# Environment
NODE_ENV=development

# Database URLs (if using external DBs)
# DATABASE_URL=postgresql://username:password@localhost:5432/mostatements

# Email Configuration (for notifications)
# EMAIL_SERVER=smtp://username:password@localhost:587
# EMAIL_FROM=noreply@mostatements.com

# Analytics
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Feature Flags
ENABLE_OCR=true
ENABLE_AI_CATEGORIZATION=true
ENABLE_EXPORT=true
ENABLE_MULTI_BANK=true

# Rate Limiting
RATE_LIMIT_UPLOADS_PER_HOUR=10
RATE_LIMIT_EXPORTS_PER_DAY=50

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png
